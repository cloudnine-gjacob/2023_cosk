yt-video {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: transparent;
  overflow: hidden;

  &:hover{
    .video-player__controls{
      transform: translateY(0);
    }
  }

  .is-mobile{
    .video-player__controls{
      transform: translateY(0)!important;
    }
  }

  // Youtube
  iframe{
    position: absolute;
    width: 108%;
    height: 104%;
    left:-4%;
    top:-2%;
  }
}


.video-player__overlay{
    position: absolute;
    width: 108%;
    height: 104%;
    left:-4%;
    top:-2%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    background-position: center;
    opacity: 1;

    .video-start-button{
      width: 137px;
      height: 79px;
      fill: $video-start-icon-color;
    }

    &:hover .video-start-button{
      fill: $video-start-icon-color-hover;
    }

    [data-status='WAITING'] &&
    {
      opacity: 0;
    }

    [data-status='LOADING'] &&,
    [data-status*='BUFFERING'] &&,
    [data-status='PLAYING'] &&,
    [data-status='PAUSED'] &&
    {
        display: none;
    }

    [data-pointerevents*='false'] &&{
      pointer-events: none;
    }
  }


.video-player__spinner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;

  > div{
    width: 70px;
    text-align: center;

    > div {
      width: 12px;
      height: 12px;
      background-color: #cacaca;

      border-radius: 100%;
      display: inline-block;
      -webkit-animation: sk-bouncedelay 1.4s infinite ease-in-out both;
      animation: sk-bouncedelay 1.4s infinite ease-in-out both;
    }
  }


  .circle1 {
    -webkit-animation-delay: -0.32s;
    animation-delay: -0.32s;
  }

  .circle2 {
    -webkit-animation-delay: -0.16s;
    animation-delay: -0.16s;
  }

  [data-status*='LOADING'] &,
  [data-status*='BUFFERING0'] &,
  [data-status*='BUFFERING1'] &{
    opacity: 1;
  }

  [data-status*='BUFFERING1'] &{
    background-color: rgba(255, 0, 0, 0);
  }

  [data-status*='LOADING'] &,
  [data-status*='BUFFERING0'] &,
  [data-status*='BUFFERING1'] &,
  [data-status*='PLAYING'] &,
  [data-status*='PAUSED'] &
  {
    pointer-events: auto;
  }

  [data-controls*='STANDARD'] &{
    pointer-events: none  !important;
  }

  [data-pointerevents*='false'] &{
    pointer-events: none!important;
  }
}


.video-player__progress-bar{
  width: 0;
  height: 3px;
  background-color: grey;
  position: absolute;
  bottom: 0;
  left: 0;
}


@keyframes sk-bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}

